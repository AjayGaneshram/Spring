<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">
   <context:annotation-config />
<context:component-scan base-package="Basic" />

    <!-- bean definitions here -->
<bean id="customerinfo" class="Basic.CustomerInfo">
<property name="Name" value="Ganesh Ram"></property>
</bean>


<bean id="AddresS" class="Basic.Address">
<property name="street" value="Punjai Puliampatti"></property></bean>

<bean id="ChildAddresS" class="Basic.ChildAddress">
<property name="street" value="Punjai Puliampatti"></property></bean>


<bean id="AccountInfo" class="Basic.AccountDetails" scope="singleton" init-method="testinit" destroy-method="destroyXml">
<property name="cusInfo">
<ref bean="customerinfo"/>
</property>

<property name="address">
<ref bean="ChildAddresS"></ref></property>


<!-- Post processor here -->
</bean>
<bean class="Basic.FirstPostProcesser"/>

<!-- namespaces_____reference schema ("P") adding schema in XML

   c for constructor(c:name="Ganesh")
-->
<bean id="AccountInfo1" class="Basic.AccountDetails" p:cusInfo-ref="customerinfo" p:address-ref="ChildAddresS"/>


</beans>
